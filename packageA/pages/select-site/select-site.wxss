/* packageA/pages/select-site/select-site.wxss */

.search_site {
  height: 90rpx;
  align-items: center;
  justify-content: center;
}

.search_site .input_wrap {
  width: 50%;
  position: relative;
}

.search_site .input_wrap image {
  position: absolute;
  left: 9rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
}

.search_site .input_wrap .title-form {
  width: 100%;
  border: 1px solid #e0e0e0;
  border-radius: 6rpx;
  text-align: left;
  padding-left: 48rpx;
  font-size: 30rpx;
}

.site_list {
	position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 30rpx;
  background-color: #fff;
  overflow-y: scroll;
}

/* 地点检索列表样式 */

.pois-list {
  top: 400rpx;
}

.pois-list .pois-item-wrap {
  cursor: pointer;
  padding: 10rpx 0;
  font-size: 28rpx;
}

.pois-list .pois-item-wrap .pois-item {
  line-height: 60rpx;
}

.pois-list .pois-item-wrap:first-child .pois-item-name {
  color: #f40;
  padding-left: 32rpx;
  background: url("data:image/png;base64,") left center no-repeat;
  -webkit-background-size: auto 60%;
  background-size: auto 60%;
}

/* 搜索列表样式 */

.sug-list .sug-item-wrap {
  cursor: pointer;
  padding: 10rpx 0;
  font-size: 28rpx;
}

.sug-list .sug-item-wrap .pois-item {
  line-height: 60rpx;
}

.sug-list .sug-item-wrap:first-child {
  border-top: 1px solid #e0e0e0;
}

#map {
  font-size: 24rpx;
}

