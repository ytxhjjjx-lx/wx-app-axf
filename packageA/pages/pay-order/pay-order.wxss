/* packageA/pages/payOrder/pay-order.wxss */
.main_content {
	font-size: 30rpx;
	bottom: 120rpx;
	color: #333;
}

.state {
	height: 80rpx;
	line-height: 80rpx;
	font-weight: bold;
	padding-left: 20rpx;
}

.payed {
	height: 80rpx;
	line-height: 80rpx;
	padding-right: 20rpx;
}

.info {
	margin-top: 20rpx;
	padding: 25rpx;
}

.order-info view, .site-info view, .fee-info>view:first-child, .fee-info .details .cont {
	height: 60rpx;
	line-height: 60rpx;
}

.site-info .flex_row>text:first-child {
	width: 25%;
}

.order-info .flex_row>text:last-child {
	flex: 1;
	padding-left: 20rpx;
}

.place-order {
	position: fixed;
	height: 80rpx;
	line-height: 80rpx;
	bottom: 0;
	left: 0;
	right: 0;
	padding: 20rpx;
}

.place-order view {
	text-align: center;
	height: 80rpx;
	width: 150rpx;
	margin-left: 20rpx;
	border-radius: 10rpx;
}

.fee-info {
	margin-bottom: 40rpx;
}

.fee-info .cont .name {
	flex: 1;
}

.fee-info .cont .num {
	width: 10%;
	text-align: right;
}

.fee-info .cont .price {
	width: 20%;
	text-align: right;
}

.cont {
	height: 80rpx;
	line-height: 80rpx;
}


